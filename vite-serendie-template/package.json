{
    "name": "vite-serendie-template",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite --host",
        "build": "tsc -b && vite build",
        "lint:legacy": "eslint .",
        "preview": "vite preview",
        "lint": "biome lint --write ./src",
        "format": "biome format --write ./src",
        "check": "biome check --write ./src",
        "type": "tsc --noEmit",
        "ci": "biome ci",
        "test": "vitest run --reporter=dot",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest --coverage",
        "test:ci": "vitest run --coverage --reporter=junit --outputFile=junit-report.xml",
        "docs": "typedoc --plugin typedoc-plugin-markdown --entryPointStrategy expand src"
    },
    "dependencies": {
        "@serendie/design-token": "^1.3.0",
        "@serendie/symbols": "^1.0.2",
        "@serendie/ui": "^2.3.0",
        "react": "^19.2.0",
        "react-dom": "^19.2.0",
        "react-router-dom": "^7.11.0",
        "uuid": "^13.0.0"
    },
    "devDependencies": {
        "@biomejs/biome": "2.3.6",
        "@eslint/js": "^9.39.1",
        "@types/node": "^24.10.1",
        "@types/react": "^19.2.5",
        "@types/react-dom": "^19.2.3",
        "@vitejs/plugin-react-swc": "^4.2.2",
        "@vitest/coverage-v8": "^4.0.16",
        "@vitest/ui": "^4.0.16",
        "eslint": "^9.39.1",
        "eslint-plugin-react-hooks": "^7.0.1",
        "eslint-plugin-react-refresh": "^0.4.24",
        "globals": "^16.5.0",
        "happy-dom": "^20.0.11",
        "npm-check-updates": "^19.2.0",
        "typedoc": "^0.28.15",
        "typedoc-plugin-markdown": "^4.9.0",
        "typescript": "~5.9.3",
        "typescript-eslint": "^8.46.4",
        "vite": "^7.2.4",
        "vitest": "^4.0.16"
    }
}
