{
    // ===============
    // 環境設定
    // ===============
    "python.defaultInterpreterPath": "api/.venv/bin/python",
    // ===============
    // 基本設定
    // ===============
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.detectIndentation": false,
    "editor.renderControlCharacters": true,
    "editor.renderWhitespace": "all",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        // JavaScript Actions
        "source.organizeImports.biome": "explicit",
        "source.action.useSortedAttributes.biome": "explicit",
        // CSS Actions
        "source.action.useSortedProperties.biome": "explicit",
        // JSON Actions
        "source.action.useSortedKeys.biome": "explicit",
        // All Actions
        "source.fixAll.biome": "explicit"
    },
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "files.eol": "\n",
    "files.associations": {
        "devcontainer.json": "jsonc"
    },
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.profiles.linux": {
        "zsh": {
            "path": "/usr/bin/zsh"
        }
    },
    "git.autofetch": true,
    "git.openRepositoryInParentFolders": "always",
    "telemetry.feedback.enabled": false,
    "telemetry.telemetryLevel": "off",
    "extensions.ignoreRecommendations": false,
    // ===============
    // 言語別設定
    // ===============
    "eslint.enable": false,
    "biome.enabled": true,
    "biome.requireConfiguration": true,
    "biome.lsp.trace.server": "verbose",
    "[javascript][javascriptreact][typescript][typescriptreact]": {
        // "editor.defaultFormatter": "esbenp.prettier-vscode"
        "editor.defaultFormatter": "biomejs.biome",
        "editor.formatOnPaste": true,
        "editor.formatOnType": true
    },
    "[css][postcss]": {
        // "editor.defaultFormatter": "esbenp.prettier-vscode"
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[json][jsonc]": {
        // "editor.defaultFormatter": "vscode.json-language-features",
        "editor.defaultFormatter": "biomejs.biome",
        "editor.tabSize": 4
    },
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.tabSize": 4
    },
    "[toml]": {
        "editor.defaultFormatter": "tamasfe.even-better-toml"
    },
    // // pyproject.tomlは特殊なTOMLなので、Taplo（even-better-toml）のスキーマ検証を調整
    // "evenBetterToml.schema.enabled": true,
    // "evenBetterToml.schema.associations": {
    //     // pyproject.tomlにはPEP 621スキーマを使用（空文字列で無効化も可）
    //     "**/pyproject.toml": "https://json.schemastore.org/pyproject.json"
    // },
    // // Taploのフォーマット設定（pyproject.toml用）
    // "evenBetterToml.formatter.alignEntries": false,
    // "evenBetterToml.formatter.arrayTrailingComma": true,
    // "evenBetterToml.formatter.columnWidth": 88,
    "[yaml]": {
        "editor.defaultFormatter": "redhat.vscode-yaml"
    },
    // ===============
    // 拡張機能設定
    // ===============
    "chat.agent.enabled": true,
    // "chat.disableAIFeatures": true,
    "chat.tools.terminal.autoApprove": {
        // 環境確認
        "pwd": true,
        "aws --version": true,
        "az --version": true,
        "node --version": true,
        "python --version": true,
        "uv --version": true,
        "npm --version": true,
        "pnpm --version": true,
        "docker (images|volumes|ps)( .*|$)": true,
        // Git関連
        "git (branch|status( --porcelain)?|log|show) .*": true,
        // 操作系
        "npm run (dev|build|test|preview|lint|type-check|check|test:ci|test:coverage|format:check)( .*|$)": true,
        "pnpm run (dev|build|test|preview|lint|type-check|check|test:ci|test:coverage|format:check)( .*|$)": true,
        "uv run --no-env-file -- (ruff|pyright|pytest)( .*|$)": true,
        // 取得系
        "curl -XGET .*": true,
        "ls( .*|$)": true,
        "cat (README.md|CHANGELOG.md|CONTRIBUTING.md|.gitignore)": true,
        // 禁止
        "cat **/.env*": false,
        "printenv": false
    }
}
